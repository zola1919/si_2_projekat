@page
@model eUcionica.Pages.PredmetPage.PredmetModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Предмети</h1>

<p>
    <a asp-page="Create">Додајте нови предмет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Predmet[0].Name) *@
                Назив предмета
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Predmet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.ID">Уклонити предмет</a>
            </td>
        </tr>
}
    </tbody>
</table>
