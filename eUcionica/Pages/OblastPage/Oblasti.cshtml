@model eUcionica.Pages.OblastPage.OblastModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Области</h1>

<p>
    <a asp-page="Create">Додајте нову област</a>
</p>
<form method="post">
    <input type="text" asp-for="SearchText">
    <input type="submit" value="Претрага">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="btn-outline-dark" asp-page-handler="SortByPredmet">Предмет</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Oblast[0].Name)*@
                Област
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Oblast) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Predmet.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.ID">Обриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
